<!-- Minimal Kanban view for Properties with default grouping -->
<odoo>
    <record id="view_property_kanban_minimal" model="ir.ui.view">
        <field name="name">estate.property.kanban.minimal</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" create="false" drag_and_drop="false">
                <field name="name"/>
                <field name="property_type_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="property_type_id"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>