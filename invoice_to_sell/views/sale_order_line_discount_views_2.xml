<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_inherit_discount" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.discount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//list/field[@name='price_unit']" position="after">
                <field name="discount"/>
                <field name="discount_amount"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_form_inherit_total_discount" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.total.discount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_totals']" position="before">
                 <div class="d-flex justify-content-between">
                    <span>Total</span>
                    <field name="total_amount"
                           readonly="1" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           class="text-end"/>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Discount</span>
                    <field name="total_discount_2"
                           readonly="1" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           class="text-end"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
