<odoo>
    <record id="view_order_line_form_readonly_inherit_discount" model="ir.ui.view">
        <field name="name">sale.order.line.form.readonly.inherit.discount</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_unit']" position="after">
                <field name="discount"/>
            </xpath>
        </field>
    </record>
</odoo>
